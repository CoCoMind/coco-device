# Coco Device Configuration
# Copy to .env and fill in required values

# ============================================
# REQUIRED: Identity & Backend
# ============================================
COCO_DEVICE_ID=                      # Unique device identifier
COCO_USER_EXTERNAL_ID=               # User ID for backend
COCO_PARTICIPANT_ID=                 # Participant ID for sessions
COCO_BACKEND_URL=                    # e.g., https://coco-backend.fly.dev
INGEST_SERVICE_TOKEN=                # Bearer token for backend API

# ============================================
# REQUIRED: OpenAI
# ============================================
OPENAI_API_KEY=                      # OpenAI API key for realtime sessions

# ============================================
# Agent Behavior
# ============================================
COCO_AGENT_MODE=realtime             # realtime | mock
COCO_SESSION_LABEL=coco-realtime-autostart-session
OPENAI_EPHEMERAL_KEY=                # Optional; auto-minted if empty
OPENAI_OUTPUT_MODALITY=audio         # audio | text
OPENAI_VOICE=verse                   # OpenAI voice model
REALTIME_MODEL=gpt-4o-mini-realtime-preview-2024-12-17
COCO_SENTIMENT_MODEL=gpt-4o-mini

# ============================================
# Session Timing (milliseconds)
# ============================================
COCO_INTRO_RESPONSE_WINDOW_MS=8000   # Wait for participant after intro
COCO_MIN_LISTEN_WINDOW_MS=12000      # Min listen window per activity
COCO_MAX_LISTEN_WINDOW_MS=20000      # Max listen window per activity
COCO_FINAL_RESPONSE_WINDOW_MS=8000   # Wait for final response
COCO_LISTEN_GRACE_MS=2000            # Grace period before timeout
COCO_MAX_SESSION_MS=900000           # Max session duration (15 min)

# ============================================
# Audio Hardware (ALSA)
# ============================================
COCO_AUDIO_OUTPUT_DEVICE=plughw:3,0  # aplay device
COCO_AUDIO_INPUT_DEVICE=plughw:3,0   # arecord device
COCO_AUDIO_SAMPLE_RATE=24000
COCO_AUDIO_SAMPLE_FORMAT=S16_LE
COCO_AUDIO_INPUT_DISABLE=0           # Set 1 to disable mic input
COCO_AUDIO_DISABLE=0                 # Set 1 for text-only mode

# ============================================
# Network Resilience
# ============================================
COCO_BACKEND_TIMEOUT_MS=10000        # HTTP request timeout
COCO_BACKEND_RETRIES=1               # Number of retry attempts
COCO_EPHEMERAL_KEY_TIMEOUT_MS=15000  # Ephemeral key request timeout

# ============================================
# Logging
# ============================================
COCO_LOG_LEVEL=debug                 # debug | info | warn | error
