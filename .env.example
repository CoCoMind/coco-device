# Coco device runtime configuration (copy to .env and fill in values)

# Required identity / backend
COCO_DEVICE_ID=
COCO_USER_EXTERNAL_ID=
COCO_PARTICIPANT_ID=
COCO_BACKEND_URL=
INGEST_SERVICE_TOKEN=
# Optional bearer key if you prefer over INGEST_SERVICE_TOKEN
COCO_BACKEND_API_KEY=

# Agent behavior
COCO_AGENT_MODE=realtime            # realtime | mock
COCO_SESSION_LABEL=coco-realtime-autostart-session
OPENAI_API_KEY=
OPENAI_EPHEMERAL_KEY=               # optional; auto-minted if empty
OPENAI_OUTPUT_MODALITY=audio        # audio | text
OPENAI_VOICE=verse
REALTIME_MODEL=gpt-4o-mini-realtime-preview-2024-12-17
COCO_SENTIMENT_MODEL=gpt-4o-mini

# Audio
COCO_AUDIO_OUTPUT_DEVICE=plughw:3,0
COCO_AUDIO_INPUT_DEVICE=plughw:3,0
COCO_AUDIO_SAMPLE_RATE=24000
COCO_AUDIO_SAMPLE_FORMAT=S16_LE
COCO_AUDIO_INPUT_DISABLE=0
COCO_AUDIO_DISABLE=0

# Backend/network resilience
COCO_BACKEND_TIMEOUT_MS=10000
COCO_BACKEND_RETRIES=1
COCO_EPHEMERAL_KEY_TIMEOUT_MS=15000
