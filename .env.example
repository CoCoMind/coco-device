# Coco Device Configuration
# Copy to .env and fill in required values

# ============================================
# REQUIRED: Identity & Backend
# ============================================
COCO_DEVICE_ID=                      # Unique device identifier
COCO_PARTICIPANT_ID=                 # Participant ID for sessions
COCO_USER_EXTERNAL_ID=               # User ID for backend (defaults to PARTICIPANT_ID)
COCO_BACKEND_URL=                    # e.g., https://coco-backend.fly.dev
INGEST_SERVICE_TOKEN=                # Bearer token for backend API

# ============================================
# REQUIRED: OpenAI
# ============================================
OPENAI_API_KEY=                      # OpenAI API key for TTS/STT/LLM

# ============================================
# Audio Hardware (ALSA)
# ============================================
COCO_AUDIO_OUTPUT_DEVICE=plughw:3,0  # aplay device
COCO_AUDIO_INPUT_DEVICE=plughw:3,0   # arecord device
COCO_AUDIO_DISABLE=0                 # Set 1 for text-only mode (testing)

# ============================================
# Network & Retry Settings
# ============================================
COCO_BACKEND_TIMEOUT_MS=10000        # Backend HTTP request timeout
COCO_BACKEND_RETRIES=1               # Backend retry attempts
COCO_API_TIMEOUT_MS=30000            # OpenAI API timeout
COCO_API_RETRIES=2                   # OpenAI API retry attempts

# ============================================
# Logging
# ============================================
COCO_LOG_LEVEL=info                  # debug | info | warn | error
